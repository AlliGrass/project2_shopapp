<article>
    <section class="collection-banner">
        <img src="https://fakeimg.pl/1920x500?text=collection" alt="">
    </section>

    <section class="collection">

        <% for (collection in collections) { %>
            <div class="collection-item">
                <a href="/collections/<%=collection.collection_name%>"><img src="<$=collection.image_url>" alt=""></a>
            </div>
        <% } %>
    </section>
</article>